{
  "extends": [
    "next/core-web-vitals"
  ],
  "plugins": [
    "no-relative-import-paths"
  ],
  "rules": {
    "padding-line-between-statements": [
      "error",
      {
        "blankLine": "always",
        "prev": [
          "const",
          "let",
          "var",
          "block",
          "block-like"
        ],
        "next": "*"
      }
    ],
    "no-relative-import-paths/no-relative-import-paths": [
      "error",
      {
        "allowSameFolder": false,
        "rootDir": "src",
        "prefix": "@"
      }
    ],
    "import/order": [
      "error",
      {
        "newlines-between": "always",
        "groups": [
          [
            "parent",
            "sibling",
            "index"
          ],
          "external",
          "internal",
          "type"
        ],
        "pathGroups": [
          {
            "pattern": "@/components/**",
            "group": "internal",
            "position": "after"
          },
          {
            "pattern": "@/app/**",
            "group": "internal",
            "position": "after"
          },
          {
            "pattern": "@/api/**",
            "group": "internal",
            "position": "after"
          },
          {
            "pattern": "@/lib/**",
            "group": "internal",
            "position": "after"
          }
        ]
      }
    ],
    "import/newline-after-import": [
      "error",
      {
        "count": 1
      }
    ]
  }
}